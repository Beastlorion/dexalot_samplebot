{
  "compilerOptions": {                        
    "target": "es6",                               
    "module": "commonjs",                           
    "outDir": "./dist-js",                             
    "rootDir": "./",                             
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true        
  },
  "exclude":[
    "./dist-js",
    "./prepare.js",
    "./ziptuils.js"
  ]
}